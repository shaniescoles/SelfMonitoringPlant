void setup() {
  Serial.begin(9600);

  //sensor start up
  pinMode(soilPower, OUTPUT);//Set D7 as an OUTPUT to power the sensor
  digitalWrite(soilPower, LOW);//Set to LOW so no power is flowing through the sensor
  pinMode(sunPower, OUTPUT);//Set D7 as an OUTPUT to power the sensor
  digitalWrite(sunPower, LOW);//Set to LOW so no power is flowing through the sensor

  //pump start up
  pinMode(relay, OUTPUT); //for pump
  digitalWrite(relay, LOW); //relay pump off

  //display start up
  display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS); //oled
  display.clearDisplay();
  display.display();

}

void loop() {
  readSensors(); //check the two sensors

  //set up for display
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(0, 0);

  //displaying the sensor values
  display.print("Soil Mosisture: ");
  display.println(soil);
  display.print("UV: ");
  display.println(sunVal);
  display.display();
  delay(4000);

  if (soil < 60) { //if the soil is dry it will water the plant
    waterPump(); //function to water plant
  }

  if (sunVal > 5) { //when sunny it will have a sun shown
    display.clearDisplay();
    display.setCursor(0, 0);
    display.drawBitmap(0, 0, sun, 128, 32, WHITE);
    display.display();
    display.startscrollright(0x00, 0x07);
  }
  else if (sunVal <= 5) { //when not sunny it will display a cloud
    display.clearDisplay();
    display.setCursor(0, 0);
    display.drawBitmap(0, 0, cloud, 128, 32, WHITE);
    display.display();
    display.startscrollright(0x00, 0x07);
  }

  delay(1800000); //30 min pause recommended for the sensors
  display.stopscroll();

}

void readSensors() {
  //the off/on is to preserve the sensors and prevent degradation over time
  //soil
  digitalWrite(soilPower, HIGH);//turn D7 on to power the soil sensor
  delay(250);
  soil = analogRead(soilPin);//Read the SIG value from sensor
  delay(250);
  digitalWrite(soilPower, LOW);//turn D7 off to turn off soil sensor
  //uv
  digitalWrite(sunPower, HIGH);//turn D8 on to power the uv sensor
  delay(250);
  sunSensor = analogRead(sunPin); //reading the uv sensor
  sunVal = sunSensor / 0.1; //calculation given on breakout page
  delay(250);
  digitalWrite(sunPower, LOW);//turn D8 off to turn off uv sensor
}

void waterPump() {
  display.setCursor(0, 0);
  display.clearDisplay();
  display.drawBitmap(0, 0, rain, 128, 32, WHITE); //display rain drops when watering the plant
  display.display();
  digitalWrite(relay, HIGH); //turngs watering pump on
  delay(1500); //how long it waters the plant
  digitalWrite(relay, LOW); //turns watering pump off
  delay(2000);
}
